{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Zip Parameters with Dependent's Output",
  "properties": {
    "scheduler_type": {
      "type": "string",
      "enum": [
        "zip-from-dep"
      ]
    },
    "step": {
      "type":"object",
      "oneOf":[{"$ref":"https://analysis-preservation.cern.ch/records/jsonschemas/definitions/workflow_schemas/packtivity/packtivity-schema.json#"}]
    },
    "zip": {
      "type":"array",
      "items": {
        "type":"object",
        "properties":{
          "outputs": {
            "type":"string"
          },
          "zip_with":{
            "type":"array",
            "items":{
              "type":"string"
            }
          },
          "from_stages":{
            "type":"array",
            "items":{
              "type":"string"
            }
          }
        },
        "required": [
          "zip_with",
          "outputs",
          "from_stages"
        ]
        
      }
    }
  },
  "required": [
    "scheduler_type",
    "step"
  ]
}